{
    "files.autoSave": "onFocusChange",
    "editor.fontFamily": "Hasklig, Consolas, 'Courier New', monospace",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "window.zoomLevel": 0,
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.copyOnSelection": true,
    "explorer.confirmDelete": false,
    "git.autofetch": true,
    "editor.smoothScrolling": true,
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "files.autoGuessEncoding": true,
    "files.enableTrash": false,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}",
    "terminal.external.linuxExec": "terminator",
    "terminal.integrated.defaultProfile.windows": "Debian (WSL)",
    "redhat.telemetry.enabled": false,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "git.openRepositoryInParentFolders": "never",
    "workbench.editorAssociations": {
      "*.md": "vscode.markdown.preview.editor"
    },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.location": "top",
    "update.showReleaseNotes": false,
    "vsicons.dontShowNewVersionMessage": true,
    "window.titleBarStyle": "custom",
    "window.dialogStyle": "custom",
    "todo-tree.general.enableFileWatcher": true,
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.)).*\\s($TAGS)",
    "todo-tree.highlights.useColourScheme": true,
    "puppet.editorService.formatOnType.enable": true,
    "explorer.autoReveal": "focusNoScroll",
    "explorer.confirmPasteNative": false,
    "workbench.list.openMode": "doubleClick",
    "workbench.tree.expandMode": "doubleClick",
}
