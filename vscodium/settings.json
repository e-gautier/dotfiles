{
    "files.autoSave": "onFocusChange",
    "editor.fontFamily": "Hasklig, Consolas, 'Courier New', monospace",
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "window.zoomLevel": 0,
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    "terminal.integrated.copyOnSelection": true,
    "explorer.confirmDelete": false,
    "git.autofetch": true,
    "editor.smoothScrolling": true,
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "files.autoGuessEncoding": true,
    "files.enableTrash": false,
    "window.title": "${dirty}${activeEditorShort}${separator}${rootName}${separator}",
    "terminal.external.linuxExec": "terminator",
    "terminal.integrated.defaultProfile.windows": "Debian (WSL)",
    "redhat.telemetry.enabled": false,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "git.openRepositoryInParentFolders": "never",
    "workbench.editorAssociations": {
      "*.md": "vscode.markdown.preview.editor"
    },
    "workbench.colorTheme": "Bearded Theme HC Ebony",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.activityBar.location": "top"
}
