exec xinput --set-prop 'SynPS/2 Synaptics TouchPad' 'libinput Accel Speed' 0.4

# start xscreensaver
exec DISPLAY=:0 /usr/bin/xscreensaver

# alttab
exec alttab -d 1 -i 90x90

# run terminator
exec terminator
