exec usbguard-applet-qt

# copyq applet
exec copyq

# sound applet
exec pasystray

# bluetooth applet
exec bluetoothctl power off
exec blueman-applet

# redshift
exec redshift -c ~/.config/redshift

# run shutter
exec shutter --min_at_startup

# run dunst
exec dunst

# run udiskie
exec udiskie -at

# set wallpaper
exec feh --bg-scale ~/SYNC/MAIN/Wallpapers/i3/wpp

# set dual screen configuration
# xrandr --output HDMI-1 --right-of LVDS-1

# set vertical synchronization
exec compton --backend glx --vsync opengl-swc

# set mouse config
