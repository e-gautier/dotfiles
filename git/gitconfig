  	username = e-gautier
[core]
    editor = vim
    fileMode = false
    pager = delta
[alias]
    aliases = !git config -l | grep alias | cut -c 7-
    plog = log --graph  --pretty=format:'%C(auto)%h %ad %an %d %s %gn' --abbrev-commit --all --date=format:'%H:%M %d/%m/%Y'
    a = add
    b = branch
    c = commit
    cl = clone
    d = diff
    st = status
    f = fetch
    ck = checkout
    ps = push
    pl = pull
    pull = pull --autostash
    fom = fetch origin master:master
    recent = branch -v --sort=-committerdate
    undo = reset --soft HEAD^
    recommit = commit --reedit-message ORIG_HEAD
[winUpdater]
    recentlySeenVersion = 2.22.0.windows.1
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[rebase]
    autoStash = true
[pull]
    rebase = true
[rerere]
    enabled = true
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true
    line-numbers = true
    side-by-side = true
    keep-plus-minus-markers = false
    syntax-theme = none
